{
    "layer": "top",
    "position": "top",
    "margin-top": 0,
    "margin-right": 0,
    "margin-bottom": 0,
    "margin-left": 0,

    "modules-left": [
        "custom/power",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "custom/media"
    ],
    "modules-right": [
        "tray",
        "bluetooth",
        "network",
        "wireplumber", 
        "backlight",
        "battery",
        "clock"
    ],
    // ---- LEFT ------
    "custom/power": {
        "format" : "‚èª",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
    "hyprland/workspaces": {
        "format": ""
    },
    // ---- CENTER -----
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "~/.config/waybar/mediaplayer.py 2> /dev/null"
    },

    // ---- RIGHT ------
    "bluetooth": {
        "format": "Û∞Ç≤",
        "format-on": "{icon}",
        "format-off": "{icon}", 
        "format-connected":"{icon}",
        "format-icons":{
            "on":"Û∞ÇØ",
            "off": "Û∞Ç≤",
            "connected": "Û∞Ç±"
            },
        "on-click": "blueman-manager",
        "tooltip-format-connected":"{device_enumerate}"
    },
    "clock": {
        "timezone": "Europe/Rome",
        "tooltip": false,
        "format": "{:%H:%M}",
        "interval": 1
    },
    "network": {
        "format-wifi": "Û∞§¢",
        "format-ethernet": "Û∞àÄ",
        "format-disconnected": "Û∞§†",
        "interval": 5,
        "tooltip-format": "{essid} ({signalStrength}%)",
        "on-click": "nm-connection-editor"
    },
    "backlight": {
        "format": "{icon}  {percent}%",
        "format-icons": ["Óéç","Û∞Éú", "Û∞Éõ", "Û∞Éû","Û∞Éù","Û∞Éü","Û∞É†"],
        "tooltip": false
    },

    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": "ÔÄ¶",
        "on-click": "helvum",
        "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "battery": {
        "interval":2,
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}%",
        "format-full": "{icon}  {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "custom/pomodoro": {
        "format": "{}",
        "return-type": "json",
        "exec": "waybar-module-pomodoro --no-work-icons",
        "on-click": "waybar-module-pomodoro toggle",
        "on-click-right": "waybar-module-pomodoro reset"
    },
    "tray": {
        "icon-size": 19,
        "spacing": 5
    }
}
